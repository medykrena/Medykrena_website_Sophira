  "global_exclude": {
    "patterns": [
      "sport",
      "people",
      "recette",
      "voyage",
      "unterhaltung",
      "gesellschaft (klatsch)"
    ]
  },
  "scoring": {
    "title_weight": 2.0,
    "summary_weight": 1.2,
    "body_weight": 1.0,
    "bonus_terms": [
      "étude",
      "rapport",
      "analyse",
      "studie",
      "bericht",
      "analyse"
    ],
    "bonus": 0.5
  },
  "output": {
    "max_items_per_run": 12,
    "fields": ["title", "url", "published_at", "source", "lang", "matched_keywords", "excerpt"],
    "sort": "published_at_desc"
  }
}
