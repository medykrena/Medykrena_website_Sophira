      ],
      "sources": [
        {"name": "SRF News – Digital", "lang": "de", "type": "website", "url": "https://www.srf.ch/digital"},
        {"name": "SRF News – Wirtschaft", "lang": "de", "type": "website", "url": "https://www.srf.ch/wirtschaft"},
        {"name": "Der Bund – Wirtschaft", "lang": "de", "type": "website", "url": "https://www.derbund.ch/wirtschaft"},
        {"name": "NZZ – Digital", "lang": "de", "type": "website", "url": "https://www.nzz.ch/digital"},
        {"name": "Handelszeitung", "lang": "de", "type": "website", "url": "https://www.handelszeitung.ch/"},
        {"name": "Tages-Anzeiger – Wirtschaft", "lang": "de", "type": "website", "url": "https://www.tagesanzeiger.ch/wirtschaft.html"}
