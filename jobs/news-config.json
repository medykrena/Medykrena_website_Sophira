        "data",
        "emploi",
        "job",
        "crise",
        "renvoi",
        "licenciement",
        "robotisation",
        "transformation numérique",
        "reconversion",
        "productivité",
        "marché du travail",
        "risque d'automatisation"
      ],
      "sources": [
        {"name": "RTS Info – Économie", "lang": "fr", "type": "website", "url": "https://www.rts.ch/info/economie/"},
        {"name": "RTS Info – Sciences/Tech", "lang": "fr", "type": "website", "url": "https://www.rts.ch/info/sciences-tech/"},
        {"name": "Le Temps – Économie", "lang": "fr", "type": "website", "url": "https://www.letemps.ch/economie"},
        {"name": "Le Temps – Explorations IA", "lang": "fr", "type": "website", "url": "https://www.letemps.ch/explorations"},
