{
  "version": 1,
  "description": "Sophira blog auto-news filter (FR+DE). Only keep articles that match >=3 keywords in the same language.",
  "min_keyword_matches": 3,
  "max_age_days": 21,
  "dedupe_window_hours": 72,
  "normalize": {
    "lowercase": true,
    "strip_punctuation": true
  },
  "languages": {
