        {"name": "Les Echos – Tech & Médias", "lang": "fr", "type": "website", "url": "https://www.lesechos.fr/tech-medias/"}
      ],
      "seed_urls": [
        "https://www.rts.ch/info/economie/2025/article/le-chomage-grimpe-aux-etats-unis-la-creation-d-emplois-ralentit-28989927.html",
        "https://www.rts.ch/info/sciences-tech/2025/article/ia-generative-les-emplois-feminins-3-fois-plus-menaces-que-les-masculins-28895927.html",
        "https://www.letemps.ch/explorations/ia-qu-a-m-expliquer/podcast-le-travail-humain-invisible-de-l-automatisation-dans-l-ia"
      ]
    },
    "de": {
      "keywords": [
        "automatisierung",
        "ki",
        "daten",
        "beschäftigung",
        "job",
        "krise",
        "entlassung",
        "verdrängung",
        "umschulung",
        "digitalisierung",
        "produktivität",
        "rationalisierung",
        "arbeitsmarkt",
